<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Large Image Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/background_light">
            
            <ImageView
                android:id="@+id/groundImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="Ground Image" />
                
            <!-- Gradient Overlay for better text visibility -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:alpha="0.3" />
                
            <!-- Price Badge - Top Right -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/priceCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/groundPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹500"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/hr"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="2dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Rating Badge - Top Left -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/groundRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Ground Name and Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/groundName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wankhede Stadium"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />
                
                <!-- Type Chip -->
                <TextView
                    android:id="@+id/groundType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cricket"
                    android:textSize="11sp"
                    android:textColor="@color/primary"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/primary_light"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Location and Distance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:id="@+id/groundLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mumbai, India"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

                <!-- Distance Badge -->
                <TextView
                    android:id="@+id/groundDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5 km"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/background_light"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />
            </LinearLayout>

            <!-- Book Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bookBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Book Now"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary"
                app:cornerRadius="16dp"
                app:elevation="0dp"
                android:letterSpacing="0.02" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
