<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Ground Name & Status Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/groundNameAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ground Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/bookingIdAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: #12345678"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/statusAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/status_badge_background"
                android:minWidth="80dp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="12dp" />

        <!-- Customer Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_light"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤ Customer Information"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/customerNameAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/customerPhoneAdmin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“ž +91 9876543210"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/customerEmailAdmin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âœ‰ï¸ email@example.com"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- Booking Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Row 1: Date & Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“… Booking Date"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/dateAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-01-15"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â° Time Slot"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/timeSlotAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 AM - 11:00 AM"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2: Location & Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Location"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/groundLocationAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City Park"
                        android:textSize="13sp"
                        android:textColor="@color/text_primary"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŸï¸ Type"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/groundTypeAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Football"
                        android:textSize="13sp"
                        android:textColor="@color/text_primary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Price & Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:background="@color/background_light"
            android:padding="12dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/priceAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹500"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/rejectBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reject"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/error"
                    app:cornerRadius="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/approveBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approve"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/success"
                    app:cornerRadius="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    style="@style/Widget.MaterialComponents.Button" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>